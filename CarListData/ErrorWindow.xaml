<Window x:Class="CarListData.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarListData"
        mc:Ignorable="d"
        Title="ErrorWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Name="ErrorMessage"  HorizontalAlignment="Center" Margin="0,121,0,0" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Height="96" Width="276"/>
        <Button Content="Close" HorizontalAlignment="Center" Margin="0,340,0,0" VerticalAlignment="Top" Height="55" Width="170" Name="CloseErrorWindow" Click="CloseErrorWindow_Click"/>

    </Grid>
</Window>
